@model QuizbeePlus.ViewModels.HomeViewModel
@{
    var shareableLink = string.Format("{0}://{1}{2}", Request.Url.Scheme, Request.Url.Authority, Url.Home());
}

<div id="home">
    <div class="black-layer">
        <div class="container">
            <div class="home-data">

                <div class="container-fluid">

                    @*<div class="text-center">
                    <h4 class="font-600">@Model.PageInfo.PageTitle</h4>
                    <p class="text-muted">
                        @Model.PageInfo.PageDescription
                    </p>
        <img src="~/Content/images/logo.png" />

                </div>*@
                    <img src="~/Content/images/logo.png"
                         alt="مركز التجول الرقمي" width="100px" style="display: block; margin: 0px auto 20px;" />
                </div>
                                </div>
                                <hr />
                                @if (Model.Categories != null && Model.Categories.Count > 0)
                                {
                                    <div class="col-md-12 mt-3">
                                        @for (int i = 1; i <= Model.Categories.Count; i++)
                                        {
                                            i--;

                                            <div class="card-deck mb-4">
                                                @foreach (var category in Model.Categories.Skip(i).Take(3))
                                                {
                                                    <div class="card">
                                                        <div class="card-header">
                                                            <b class="card-title">
                                                                <i class="fas fa-question-circle"></i>&nbsp; @category.Name
                                                            </b>

                                                            <p title="This quiz contain images." class="badge badge-primary text-white pull-right mb-0">
                                                                <i class="fas fa-images"></i>
                                                            </p>

                                                        </div>
                                                        <div class="card-body">
                                                            <p class="card-text">
                                                                @if (category.Description.Length >= 300)
                                                                {
                                                                    <span>@category.Description.Substring(0, 300)...</span>
                                                                }
                                                                else
                                                                {
                                                                    <span>@category.Description</span>
                                                                }
                                                            </p>
                                                        </div>

                                                        <ul class="list-group list-group-flush">
                                                            <li class="list-group-item">
                                                                <i class="fas fa-stopwatch"></i>&nbsp;
                                                                Time Allowed :

                                                                <span>Disabled</span>

                                                            </li>
                                                            <li class="list-group-item">
                                                                <i class="fas fa-list-ul"></i>&nbsp;
                                                                Total Questions :
                                                                20
                                                            </li>
                                                        </ul>
                                                        <div class="card-footer">
                                                            <b class="text-muted">
                                                                <a href="@Url.AttemptQuiz(category.ID)" class="card-link">
                                                                    <i class="fas fa-certificate "></i>&nbsp;
                                                                    Go to Exam
                                                                </a>
                                                            </b>
                                                        </div>
                                                    </div>

                                                    i++;
                                                }
                                            </div>
                                        }
                                    </div>

                                    if (Model.Pager != null && Model.Pager.EndPage > 1)
                                    {
                                        <div class="row">
                                            @if (Model.Pager.CurrentPage > 1)
                                            {
                                                <div class="col-sm-12">
                                                    <hr />
                                                    <div class="text-center">
                                                        <a href="@Url.Home(Model.searchTerm, Model.Pager.CurrentPage - 1, Model.Pager.PageSize)" role="button" class="btn btn-info m-t-10">
                                                            <i class="fas fa-clipboard-list mg-r-10"></i>&nbsp;Back
                                                        </a>
                                                    </div>
                                                </div>
                                            }

                                            @if (Model.Pager.CurrentPage < Model.Pager.TotalPages)
                                            {
                                                <div class="col-sm-12">
                                                    <hr />
                                                    <div class="text-center">
                                                        <a href="@Url.Home(Model.searchTerm, Model.Pager.CurrentPage + 1, Model.Pager.PageSize)" role="button" class="btn btn-info m-t-10">
                                                            <i class="fas fa-clipboard-list mg-r-10"></i>&nbsp;See More Quizzes
                                                        </a>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="col-md-12">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="m-t-10 alert alert-icon alert-warning" role="alert">
                                                    <i class="mdi mdi-alert"></i>
                                                    Sorry. No Quizzes Found.
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                                
                            

            
        </div>
    </div>
</div>
