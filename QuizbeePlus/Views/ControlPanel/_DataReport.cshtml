
@model QuizbeePlus.ViewModels.DataReportViewModel
@{
    ViewBag.Title = "report";
}

<div class="row">
    @Html.Partial("_Loader", "usersLoader")
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">  
                <div class="col-md-8">
                    @using (Html.BeginForm("DataReport", "controlpanel", FormMethod.Post))
                    {

                        <div class="form-group row">
                            <div class="col-md-6">
                                <label> Choose Category </label>
                                <select name="categories" id="categories" class="form-control">
                                    <option value="category_all"> All Categories </option>
                                    <option selected value="@Model.catsearch"> English </option>
                                    <option value="@Model.catsearch"> IQ </option>
                                    <option value="@Model.catsearch"> GIS </option>
                                    <option value="@Model.catsearch"> Development </option>
                                    <option value="@Model.catsearch"> Network </option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label> Result Range </label>
                                        <select name="result_range" class="form-control">
                                            <option value="equal" selected> Equal </option>
                                            <option value="greater"> Greater Than </option>
                                            <option value="less"> Less Than </option>
                                        </select>
                                    </div>

                                    <div class="col-md-6">
                                        <label> Enter result </label>
                                        <input id="get-result" name="result_nom" class="form-control" placeholder="" value="@Model.ressearch" required onchange="test()">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-6">
                                <label> Start Date </label>
                                <input id="start-date" type="date" name="start_date" class="form-control" placeholder="Enter Result" value="@Model.startsearch" required>
                            </div>
                            <div class="col-md-6">
                                <label> End Date </label>
                                <input id="end-date" type="date" name="end_date" class="form-control" placeholder="Enter Result" value="@Model.endsearch" required>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-danger"> Search </button>
                        @*<button class="btn btn-info">  @Html.ActionLink("PRINT PDF", "PrintViewToPdf") </button>*@
                        <input class="btn btn-info" type="button" value="Create PDF"
                               id="btPrint" onclick="createPDF()" />



                    }
                </div>

                @if (Model.Users != null && Model.Users.Count > 0)
                {
                    <div class="col-md-12 table-responsive " id="tab" >
                        <table class="table table-striped table-bordered m-b-0">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th class="hide-phone">Email</th>
                                    <th class="text-center hide-phone">Registered</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model.Users)
                                {
                                    <tr>
                                        <td class="align-middle">@user.UserName</td>
                                        
                                        <td class="align-middle text-center wrap-td hide-phone">
                                            @user.Email
                                        </td>
                                        <td class="align-middle text-center wrap-td hide-phone">
                                            @user.RegisteredOn
                                        </td>
                                        <td class="align-middle wrap-td">
                                            <div class="input-group">
                                                <a data-href="@Url.UserDetails(user.Id)" role="button" class="datalinked btn btn-primary btn-sm"><i class="fas fa-edit mg-r-10"></i>&nbsp;More Details</a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    if (Model.Pager != null && Model.Pager.EndPage > 1)
                    {
                        <div class="col-md-12 text-center">
                            <nav>
                                <ul class="pagination m-b-0">
                                    @if (Model.Pager.CurrentPage > 1)
                                    {
                                        <li class="page-item">
                                            <a class="datalinked page-link" data-href="@Url.Users(Model.searchTerm, 1, Model.pageSize)" aria-label="First">
                                                <span aria-hidden="true"><i class="fa fa-angle-double-left"></i></span>
                                                <span class="sr-only">First</span>
                                            </a>
                                        </li>
                                        <li class="page-item">
                                            <a class="datalinked page-link" data-href="@Url.Users(Model.searchTerm, Model.Pager.CurrentPage - 1, Model.pageSize)" aria-label="Previous">
                                                <span aria-hidden="true"><i class="fa fa-angle-left"></i></span>
                                                <span class="sr-only">Previous</span>
                                            </a>
                                        </li>
                                    }

                                    @for (var page = Model.Pager.StartPage; page <= Model.Pager.EndPage; page++)
                                    {
                                        <li class="page-item @(page == Model.Pager.CurrentPage ? "active" : "")">
                                            <a class="datalinked page-link" data-href="@Url.Users(Model.searchTerm, page, Model.pageSize)">@page</a>
                                        </li>
                                    }

                                    @if (Model.Pager.CurrentPage < Model.Pager.TotalPages)
                                    {
                                        <li class="page-item">
                                            <a class="datalinked page-link" data-href="@Url.Users(Model.searchTerm, Model.Pager.CurrentPage + 1, Model.pageSize)" aria-label="Next">
                                                <span aria-hidden="true"><i class="fa fa-angle-right"></i></span>
                                                <span class="sr-only">Next</span>
                                            </a>
                                        </li>
                                        <li class="page-item">
                                            <a class="datalinked page-link" data-href="@Url.Users(Model.searchTerm, Model.Pager.TotalPages, Model.pageSize)" aria-label="Last">
                                                <span aria-hidden="true"><i class="fa fa-angle-double-right"></i></span>
                                                <span class="sr-only">Last</span>
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        </div>
                    }
                }
                else
                {
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="m-t-10 alert alert-icon alert-warning" role="alert">
                                    <i class="mdi mdi-alert"></i>
                                    Sorry. No Users Found.
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script>

    $(document).ready(function () {
        $("#usersTab .datalinked").click(function () {
            var href = $(this).attr("data-href");

            if (href != undefined) {
                UsersCall(href);
            }
        });

        $("#searchUsersButton").click(function () {
            var searchVal = $("#searchUserField").val();

            if (searchVal != "") {
                href = '@Url.Users()&search=' + searchVal;
                UsersCall(href);
            }
            else {
                swal({
                    title: 'Enter value to search',
                    type: 'warning',
                    confirmButtonColor: '#4fa7f3'
                });
            }
        });

        $('#userSearchForm').bind('keypress keydown keyup', function (e) {
            if (e.keyCode == 13) { e.preventDefault(); }
        });
    });

    function UsersCall(url) {
        $("#usersLoader").show();

		$.ajax({
            type: "GET",
            async: true,
            url: url,
        })
        .done(function(data) {
            $('#usersTab').toggle('slide', {
                direction: 'left'
            }, 250, function() {
                $("#usersTab").html(data);
                $('#usersTab').toggle('slide', {
                    direction: 'right'
                }, 250);
            });
        })
        .fail(function(XMLHttpRequest, textStatus, errorThrown) {
            $("#usersLoader").hide();
            alert(errorThrown);
        });
        }

    
    function createPDF() {
        var sTable = document.getElementById('tab').innerHTML;
        var start_date = document.getElementById('start-date').value
        var end_date = document.getElementById('end-date').value
        var category = document.getElementById('categories').value
        
        var style = "<style>";
        style = style + "table {width: 100%;font: 18px Calibri;}";
        style = style + "table, th, td {border: solid 1px #DDD; border-collapse: collapse;";
        style = style + "padding: 2px 3px;text-align: center;}";
        style = style + "</style>";

        // CREATE A WINDOW OBJECT.
        var win = window.open('', '', 'height=700,width=700');

        win.document.write('<html><head>');
        win.document.write('<title>Profile</title>');   // <title> FOR PDF HEADER.
        win.document.write(style);          // ADD STYLE INSIDE THE HEAD TAG.
        win.document.write('</head>');
        win.document.write('<body>');
        win.document.write('<h3>');
        win.document.write(category + ' Exam </br>' +  'From Date: ' + start_date + ' To Date: '+ end_date );
        win.document.write('</h3>');
        win.document.write(sTable);         // THE TABLE CONTENTS INSIDE THE BODY TAG.
        win.document.write('</body></html>');

        win.document.close(); 	// CLOSE THE CURRENT WINDOW.

        win.print();    // PRINT THE CONTENTS.
    }

</script>